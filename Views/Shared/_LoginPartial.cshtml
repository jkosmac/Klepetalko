@using Microsoft.AspNetCore.Identity
@using klepetalko.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <button id="toggleDarkMode" class="btn btn-dark">Dark Mode</button>
    </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Settings</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-danger border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

<script>
    document.addEventListener("DOMContentLoaded", function () {
    const toggleButton = document.getElementById("toggleDarkMode");
    const body = document.body;
    const svincnik = document.querySelector('crni');
    const navbar = document.querySelector('nav.navbar');
    const tables = document.querySelectorAll('table');

    fetch('/Settings/GetDarkMode')
        .then(response => response.json())
        .then(data => {
            if (data.darkMode) {
                body.classList.add("dark-mode");
                svnicnik.classList.toggle("dark-mode");
                navbar.classList.toggle('dark-mode');
                tables.forEach(table => table.classList.add('dark-mode'));

                toggleButton.textContent = "Light Mode";
            }
        });

    toggleButton.addEventListener("click", function () {
        fetch('/Settings/ToggleDarkMode', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.darkMode) {
                body.classList.add("dark-mode");
                toggleButton.textContent = "Light Mode";
            } else {
                body.classList.remove("dark-mode");
                toggleButton.textContent = "Dark Mode";
            }
        });
    });
});


</script>